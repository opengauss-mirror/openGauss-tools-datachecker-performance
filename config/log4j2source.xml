<Configuration status="INFO" monitorInterval="600">
    <Properties>
        <!--Property LOG_HOME must be absolute path dir -->
        <Property name="LOG_HOME">logs</Property>
        <Property name="LOG_LEVEL">INFO</Property>
        <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level [%-36.36c{1.}] - %msg%n"/>
    </Properties>
    <Appenders>
        <Console name="console_out_appender" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="${LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile name="source_appender" immediateFlush="true" fileName="${LOG_HOME}/source.log"
                     filePattern="${LOG_HOME}/history/source - %d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <RollingFile name="source_debug_appender" immediateFlush="true" fileName="${LOG_HOME}/source-debug.log"
                     filePattern="${LOG_HOME}/history/source - %d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <RollingFile name="source_error_appender" immediateFlush="true" fileName="${LOG_HOME}/source-error.log"
                     filePattern="${LOG_HOME}/history/source - %d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </Appenders>

    <Loggers>
        <root level="${LOG_LEVEL}">
            <appender-ref ref="console_out_appender"/>
            <appender-ref ref="source_appender"/>
            <appender-ref ref="source_debug_appender"/>
            <appender-ref ref="source_error_appender"/>
        </root>

        <logger name="org.apache.kafka" level="ERROR"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="_org.springframework.web" level="ERROR"/>
        <logger name="org.hibernate.validator" level="ERROR"/>
        <logger name="org.jboss.netty" level="ERROR"/>
        <logger name="org.apache.http" level="ERROR"/>
        <logger name="oshi.util.platform" level="ERROR"/>
    </Loggers>

</Configuration>